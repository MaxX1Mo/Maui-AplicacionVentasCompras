

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_VentasCompras_Maui.Views.MenuPage"
             xmlns:vm="clr-namespace:App_VentasCompras_Maui.ViewModel"
             x:DataType="vm:MenuViewModel"
             BackgroundColor="#001111"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="LineBreakMode" Value="WordWrap" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="TextTransform" Value="None" />
            <Setter Property="HorizontalOptions" Value="FillAndExpand" />
            <Setter Property="VerticalOptions" Value="FillAndExpand" />
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout Padding="20" Spacing="25">

        <!-- Encabezado -->
        <HorizontalStackLayout VerticalOptions="Start" Spacing="15">
            <Image Source="logo_app.png" WidthRequest="50" HeightRequest="50" />
            <Label Text="Menú De Aplicacion"
                   TextColor="White"
                   FontSize="25"
                   VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <!-- Grid de botones -->
        <Grid ColumnDefinitions="*,*" RowDefinitions="*,*,*,*"
              RowSpacing="20"
              ColumnSpacing="20">

            <Button Text="Recientes"
                    Command="{Binding GoToProductoListaCommand}"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Row="0" Grid.Column="0">
                <Button.ImageSource>
                    <FontImageSource Glyph="&#xe923;" FontFamily="MaterialIcons" Size="45" Color="White"/>
                </Button.ImageSource>
            </Button>

            <Button Text="Buscar Producto"
                    Command="{Binding GoToBuscarProductosCommand}"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Row="0" Grid.Column="1">
                <Button.ImageSource>
                    <FontImageSource Glyph="&#xe8b6;" FontFamily="MaterialIcons" Size="45" Color="White"/>
                </Button.ImageSource>
            </Button>

            <Button Text="Categorías"
                    Command="{Binding GoToBuscarPorCategoriaCommand}"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Row="1" Grid.Column="0">
                <Button.ImageSource>
                    <FontImageSource Glyph="&#xe8ef;" FontFamily="MaterialIcons" Size="45" Color="White"/>
                </Button.ImageSource>
            </Button>

            <Button Text="Filtrar por Ubicación"
                    Command="{Binding GoToBuscarPorUbicacionCommand}"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Row="1" Grid.Column="1">
                <Button.ImageSource>
                    <FontImageSource Glyph="&#xe55f;" FontFamily="MaterialIcons" Size="45" Color="White"/>
                </Button.ImageSource>
            </Button>

            <Button Text="Crear Publicación"
                    Command="{Binding GoToCrearPublicacionCommand}"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Row="2" Grid.Column="0">
                <Button.ImageSource>
                    <FontImageSource Glyph="&#xe145;" FontFamily="MaterialIcons" Size="45" Color="White"/>
                </Button.ImageSource>
            </Button>

            <Button Text="Publicados"
                    Command="{Binding GoToMisPublicacionesCommand}"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Row="2" Grid.Column="1">
                <Button.ImageSource>
                    <FontImageSource Glyph="&#xe02f;" FontFamily="MaterialIcons" Size="45" Color="White"/>
                </Button.ImageSource>
            </Button>

            <Button Text="Mi Perfil"
                    Command="{Binding GoToMiPerfilCommand}"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Row="3" Grid.Column="0">
                <Button.ImageSource>
                    <FontImageSource Glyph="&#xe853;" FontFamily="MaterialIcons" Size="45" Color="White"/>
                </Button.ImageSource>
            </Button>

            <Button Text="Salir"
                    Command="{Binding ExitCommand}"
                    Style="{StaticResource MenuButtonStyle}"
                    Grid.Row="3" Grid.Column="1">
                <Button.ImageSource>
                    <FontImageSource Glyph="&#xe5c8;" FontFamily="MaterialIcons" Size="45" Color="Red"/>
                </Button.ImageSource>
            </Button>

        </Grid>
    </VerticalStackLayout>
</ContentPage>
