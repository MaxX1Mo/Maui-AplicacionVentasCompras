<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:vm="clr-namespace:App_VentasCompras_Maui.ViewModel"
             x:Class="App_VentasCompras_Maui.Views.EditarCategoriaPage"
             x:DataType="vm:EditarCategoriaViewModel"
             NavigationPage.HasNavigationBar="False"
             Title="EditarCategoriaPage">
    <Grid Padding="20" RowDefinitions="Auto,Auto,Auto,Auto">

        <Label Grid.Row="0"
               Text="Editar Categoría"
               FontSize="26"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"/>

        <Entry Grid.Row="1"
               Placeholder="Nombre de la categoría"
               Text="{Binding Nombre}"
               BackgroundColor="#1E1E1E"
               TextColor="White"
               PlaceholderColor="#AAAAAA"
               HeightRequest="50"
               Margin="0,20,0,0"/>

        <Button Grid.Row="2"
                Text="Guardar Cambios"
                Command="{Binding GuardarCommand}"
                BackgroundColor="#FFC107"
                TextColor="Black"
                CornerRadius="12"
                HeightRequest="50"
                Margin="0,20,0,0"/>

        <Button Grid.Row="3"
                Text="Cancelar"
                Command="{Binding CancelarCommand}"
                BackgroundColor="#FF5252"
                TextColor="White"
                CornerRadius="12"
                HeightRequest="50"
                Margin="0,10,0,0"/>

    </Grid>
</ContentPage>